<% if @poll.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@poll.errors.count, "error") %> prohibited this poll from being saved:</h2>

    <ul>
    <% @poll.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h2>Name: <%= @poll.name %></h2>
<h3>Question: <%= @poll.question %></h3>

<ul id="items">
</ul>

<form id="addition">
  <input id="content" name="item[content]" type="text">
  <input id="poll_id" name="item[poll_id]" type="hidden" value="<%= params[:id] %>">
  <input type="submit" value="Add Item">
</form>

<p id="error"></p>

<div>
	<%= form_for(@poll) do |f| %>
		<div class="form-actions">
	    <%= f.submit 'Save Changes', :class => 'btn btn-primary' %>
	    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
	                polls_path, :class => 'btn' %>
	  </div>
	<% end %>
</div>
