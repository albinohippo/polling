<div class="page-header">
  <h1>Editing "<%= @poll.name %>"</h1>
</div>
<%= form_for @poll, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @poll.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@poll.errors.count, "error") %> prohibited this poll from being saved:</h2>

      <ul>
      <% @poll.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-actions">
    <%= submit_tag 'Save Changes', :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                polls_path, :class => 'btn' %>
  </div>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :question, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :question, :class => 'text_field' %>
    </div>
  </div>
<% end %>

<h3>Items</h3>

<ul id="items">
</ul>

<form id="addition">
  <input id="content" name="item[content]" type="text">
  <input id="poll_id" name="item[poll_id]" type="hidden" value="<%= params[:id] %>">
  <input type="submit" value="Add Item">
</form>

<p id="error"></p>